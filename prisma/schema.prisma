// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  verifiedAt DateTime?
  password   String
  events     Event[]
  tickets    Ticket[]
  createdAt  DateTime  @default(now())
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String
  events Event[]
}

model Event {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  authorId    Int?
  startTime   DateTime
  tickets     Ticket[]
  categories  Category[]
  createdAt   DateTime
  User        User?      @relation(fields: [userId], references: [id])
  userId      Int?
}

model Ticket {
  id        Int    @id @default(autoincrement())
  event     Event? @relation(fields: [eventId], references: [id])
  user      User   @relation(fields: [userId], references: [id])
  createdAt String
  eventId   Int?
  userId    Int
}
